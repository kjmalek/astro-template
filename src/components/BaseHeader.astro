---
import site from "../site.config.json";
---

<a alt="Home" href="/" class="text-4xl font-bold basis-1/2">{site.title}</a>
<nav class="basis-1/2">
  <ul class="flex flex-row gap-5">
    {site.navigation.map((navItem) => (
      <li>
        <a href={navItem.link}>{navItem.name}</a>
      </li>
    ))}
  </ul>
</nav>
